{
  "name": "epro-backend",
  "version": "1.0.0",
  "description": "Backend for Epro ecommerce",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run dev --prefix ..",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix ..",
    "install:all": "npm install && npm install --prefix ..",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix .. && npm run build --prefix .."
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.15",
    "nodemon": "^3.1.11",
    "socket.io": "^4.8.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}